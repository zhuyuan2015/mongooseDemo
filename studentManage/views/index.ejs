<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>首页</title>
</head>
<body>
    <%include header.ejs %>
    <table border="1">
        <caption>学生信息表</caption>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Sex</th>
            <th>Course</th>
            <th>Edit</th>
        </tr>
        <%for(var i=0; i<result.length; i++){%>
            <tr>
                <td><%=result[i].sid%></td>
                <td><%=result[i].name%></td>
                <td><%=result[i].age%></td>
                <td><%=result[i].sex%></td>
                <td><%=result[i].Courses%></td>
                <td><a href="/edit?id=<%=result[i].sid%>">Edit</a></td>
            </tr>
        <%}%>
    </table>
</body>
</html>